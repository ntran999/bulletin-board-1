<div>
  <div>
    <h1>
      All boards
    </h1>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Add a new board
    </h2>

    <% if current_user != nil %>
    <form action="/insert_board" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Add board
      </button>
    </form>
    <% else %>
    <p> You must be signed in to add a board. <p>

    <% end %>

    
  </div>
</div>

<hr>
      <% @list_of_boards.each do |a_board| %>     
      
        <ul>
          <li>
            <a href="/boards/<%= a_board.id %>">
            <%= a_board.name %>
            </a>         
            <div>
            <% matching_record = User.where ({ :id => a_board.user_id})%>
            <% matching_user = matching_record.at(0)%>
            <%= matching_user.email %>
            </div>

          </li>
        </ul>
        <% end %>

    <hr>
